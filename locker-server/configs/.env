# 앱 메타/실행 포트
APP_NAME=Locker API
APP_ADDR=:3000

# 데이터베이스 연결 URL (PostgreSQL)
# 포맷: postgres://USER:PASS@HOST:PORT/DBNAME?sslmode=disable
DB_URL=postgres://locker:locker@localhost:5432/locker?sslmode=disable

# Redis 주소(원자적 선점/캐시/리밋 등에 사용)
REDIS_ADDR=localhost:6379

# JWT 발급/검증에 쓰는 값들
JWT_ISS=locker-api           # 발급자(issuer) - 우리 서버 이름
JWT_AUD=locker-web           # 대상(audience) - 이 토큰을 사용할 클라이언트 범위
JWT_ACCESS_SECRET=ku_info_student_council  # HS256 서명 시크릿(절대 외부 유출 금지)
JWT_ACCESS_TTL_MIN=30        # Access 토큰 만료(분 단위, 예: 30분)
JWT_REFRESH_TTL_H=336        # Refresh 토큰 만료(시간 단위, 예: 2주=336시간)